{

    "manifest_version": 2,
    "name": "YouTube Playlist Maker",
    "version": "1.0",
  
    "description": "Create and share YouTube playlists without needing an account",
  
    "icons": {
    },
  
    "content_scripts": [
      {
        "matches": [
            "*://www.youtube.com/*", "*://*.npmjs.com/*"
          ],
          "exclude_matches": [
            "*://www.youtube.com/embed/*",
            "*://www.youtube.com/pop-up-player/*"
          ],
        "js": ["playlist.js"]
      }
    ]
  
  }
  